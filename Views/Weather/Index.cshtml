@model List<CityWeather>;

@{
    string getBgColorName(int temp)
    {
        string color = "";
        if (temp < 44)
            color = "blue-bg";
        else if (temp >= 44 && temp < 74)
            color = "aquamarine-bg";
        else
            color = "orange-bg";
        return color;
    }
}

@foreach(CityWeather weather in Model)
{
    <div class="weather-box @getBgColorName(weather.TemperatureFahrenheit)">
        @await Html.PartialAsync("_DetailsBox", weather)
    </div>
}